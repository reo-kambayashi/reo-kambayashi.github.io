---
import SiteLayout from '../layouts/SiteLayout.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import AwardsSection from '../components/sections/AwardsSection.astro';
import PublicationsSection from '../components/sections/PublicationsSection.astro';
import EducationSection from '../components/sections/EducationSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import ScrollFadeScript from '../components/scripts/ScrollFadeScript.astro';
import {
  profileSummary,
  about,
  awards,
  publications,
  educationHistory,
  contacts,
  contactIcons,
} from '../data/profile';
---
<SiteLayout title="Reo Kambayashi HP" description="HP">
  <HeroSection
    name={profileSummary.name}
    affiliation={profileSummary.affiliation}
    researchArea={profileSummary.researchArea}
  />
  <AboutSection description={about.description} group={about.group} />
  <AwardsSection awards={awards} />
  <PublicationsSection publications={publications} />
  <EducationSection educationHistory={educationHistory} />
  <ContactSection contacts={contacts} contactIcons={contactIcons} />
  <ScrollFadeScript slot="scripts" />
</SiteLayout>
